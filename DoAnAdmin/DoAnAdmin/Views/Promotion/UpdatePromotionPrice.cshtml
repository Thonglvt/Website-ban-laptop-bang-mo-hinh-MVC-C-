@model DoAnAdmin.Models.promotion

@{
    ViewBag.Title = "UpdatePromotionPrice";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<script>
        @*Viết scipts tạo calendar*@
        $(function () {
            $("#txtDateE").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-10:+10"
                //showOn: "both"
            });
        });
</script>
@using (Html.BeginForm()) {
    
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container bg-light border" style="font-size:17px;color:black;width:500px">
        <center> <h4 class="mt-3 mb-3" style="font-weight:bold; color:blue;text-transform:uppercase">Cập nhật khuyến mãi</h4></center>
        <div class="form-group">
            <div class="editor-label">
                Mã sản phẩm
            </div>
            <input type="button" class="form-control" value="@Session["maSP"]" name="txtMaSP" />
        </div>
        <div class="form-group">
            <div class="editor-label">
                Ngày bắt đầu:
            </div>
            <input type="button" class="form-control" value="@Session["dateS"]" name="txtDateS" />
            @Html.ValidationMessageFor(model => model.date_start, "", new { @class = "text-danger" })
            <span class="text-danger">@ViewBag.tbDateS </span>
            <span class="text-danger">@ViewBag.tbChkDateSByToday </span>
        </div>
        <div class="form-group">
            <div class="editor-label">
                Ngày kết thúc:
            </div>
            <input type="datetime" class="form-control" value="@Session["dateE"]" id="txtDateE" name="txtDateE" />
            <span class="text-danger">@ViewBag.tbDateE </span>
            <span class="text-danger">@ViewBag.tbChkDateEByDateS</span>
        </div>
        <div class="form-group">
            <div class="editor-label">
                Giá khuyến mãi:
            </div>
            <input type="number" class="form-control" value="@Session["price"]" name="txtPrice" />
            <span class="text-danger">@ViewBag.tbPrice </span>
            <span class="text-danger">@ViewBag.tbChkPriceByPrProd</span>
        </div>
        <center>
            <p class="form-group mx-auto">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
            </p>
            <p class="text-danger" style="font-weight:bold">@ViewBag.tbPriKey</p>
            <p class="text-success" style="font-weight:bold">@ViewBag.tb</p>
        </center>
        @Html.ActionLink("Back to List", "PromotionPrice")
    </div>

}

