@model DoAnAdmin.Models.promotion

@{
    ViewBag.Title = "AddPromotionPrice";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
    
    @*Icon*@
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">*@
    <script>
        @*Viết scipts tạo calendar*@
        $(function () {
            $("#txtDateS").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-10:+10"
                //buttonText: "<i class='far fa-calendar-alt'></i>"
            });
            $("#txtDateE").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-10:+10"
                //showOn: "both"
            });
        });
    </script>

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="container bg-light" style="font-size:17px;color:black;width:500px">
        <div class="card">
            <div class="card-header">
                <center> <h5 class="mt-3" style="font-weight:bold; color:blue;text-transform:uppercase">THÊM GIÁ KHUYẾN MÃI</h5></center>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <div class="editor-label mb-1">
                        Mã sản phẩm
                    </div>
                    @Html.DropDownListFor(model => model.product_id, (IEnumerable<SelectListItem>)ViewBag.ProdID, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.product_id, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="editor-label mb-1">
                        Ngày bắt đầu:
                    </div>
                    @Html.TextBoxFor(model => model.date_start, new { @class = "form-control", @id = "txtDateS", placeHolder = "Start" })
                    @Html.ValidationMessageFor(model => model.date_start, "", new { @class = "text-danger" })
                    <span class="text-danger">@ViewBag.tbDateS </span>
                    <span class="text-danger">@ViewBag.tbChkDateSByToday </span>
                </div>
                <div class="form-group">
                    <div class="editor-label mb-1">
                        Ngày kết thúc:
                    </div>
                    @Html.TextBoxFor(model => model.date_end, new { @class = "form-control", @id = "txtDateE", placeHolder = "End" })
                    <span class="text-danger">@ViewBag.tbDateE </span>
                    <span class="text-danger">@ViewBag.tbChkDateEByDateS</span>
                </div>
                <div class="form-group">
                    <div class="editor-label mb-1">
                        Giá khuyến mãi:
                    </div>
                    @Html.TextBoxFor(model => model.price, new { @class = "form-control required", @type = "number", placeHolder = "Price" })
                    <span class="text-danger">@ViewBag.tbPrice </span>
                    <span class="text-danger">@ViewBag.tbChkPriceByPrProd</span>
                </div>
                <center>
                    <p class="form-group mx-auto ">
                        <input type="submit" value="Thêm" class="btn btn-primary" />
                    </p>
                    <p class="text-danger" style="font-weight:bold">@ViewBag.tbPriKey</p>
                    <p class="text-success" style="font-weight:bold">@ViewBag.tb</p>
                </center>
                @Html.ActionLink("Back to List", "PromotionPrice")
            </div>
        </div>
    </div>
}

