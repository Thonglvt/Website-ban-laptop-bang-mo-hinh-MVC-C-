@model IEnumerable<DoAnAdmin.Models.Image>

@{
    var dem = 0;
}
<div class="row">
    <div class="col">
        <div id="carouselExampleControls-sub" class="carousel w-100 mx-auto mt-3" data-ride="carousel">
            <div class="carousel-inner">
                @foreach (var item in Model)
                {
                    if (dem == 0)
                    {
                        <div class="carousel-item active">
                            <img src="/Assets/Image/ImageProduct/@item.image_" class="d-block w-100" alt="Ảnh" />
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="/Assets/Image/ImageProduct/@item.image_" class="d-block w-100" alt="Ảnh" />
                        </div>
                    }
                    dem++;
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls-sub" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls-sub" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>