@model DoAnAdmin.Models.Product

@{
    ViewBag.Title = "InsertProduct";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<br />
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="card container-fluid" style="border-radius: 10px; font-size: 17px; color: black; width: 750px">
        <div class="card-header">
            <center> <h5 class="mt-3" style="font-weight:bold; color:blue;text-transform:uppercase">THÊM SẢN PHẨM</h5></center>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <div class="editor-label mb-1">
                    Tên sản phẩm:
                </div>
                <div class="editor-field mb-1">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", style = "font-size:17px" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    <span class="text-danger">@ViewBag.tbName</span>
                </div>
                <div class="editor-label mb-1">
                    Thương hiệu:
                </div>
                <div class="editor-field mb-1">
                    @Html.DropDownListFor(model => model.trademark_id, (IEnumerable<SelectListItem>)ViewBag.Trademark, new { @class = "form-control", style = "text-align:center" })
                    @*@Html.TextBoxFor(model => model.trademark, new { @class = "form-control", style = "font-size    :17px" })*@
                    @Html.ValidationMessageFor(model => model.trademark_id)
                </div>
            </div>
            <div class="mb-1">
                <label style="color:green">@ViewBag.tb</label>
            </div>
            <div>
                <center>
                    <input style="font-size:15px" type="submit" class="btn btn-primary mx-auto" value="Thêm" />
                </center>
            </div>
            @Html.ActionLink("Back to List", "ProductsManager")
        </div>
    </div>
}
<br />


